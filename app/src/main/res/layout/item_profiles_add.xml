<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/constraintlayout_mainactivitydrawer_add"
	style="@style/DefaultItemStyle"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:clickable="true"
	android:focusable="true">

	<TextView
		android:layout_width="0dp"
		android:layout_height="20dp"
		android:layout_marginStart="@dimen/margin_listitem_text"
		android:gravity="center_vertical"
		android:lines="1"
		android:text="@string/mainactivitydrawer_profile_add"
		android:textColor="?android:attr/textColorPrimary"
		android:textSize="@dimen/textsize_listitem_line1"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@+id/imageview_profiles_portrait"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:layout_width="0dp"
		android:layout_height="20dp"
		android:layout_marginStart="@dimen/margin_listitem_text"
		android:gravity="center_vertical"
		android:lines="1"
		android:text="@string/mainactivitydrawer_profile_delete_hint"
		android:textColor="?android:attr/textColorSecondary"
		android:textSize="@dimen/textsize_listitem_line2"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toEndOf="@+id/imageview_profiles_portrait" />

	<androidx.appcompat.widget.AppCompatImageView
		android:id="@+id/imageview_profiles_portrait"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:scaleX=".64"
		android:scaleY=".64"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@drawable/all_add" />
</androidx.constraintlayout.widget.ConstraintLayout>
